<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GoodShot" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.GoodShot" parent="Base.Theme.GoodShot" >
<!--        <item name="android:windowBackground">@drawable/launch_background</item>-->
<!--        <item name="android:windowSplashScreenBackground">@drawable/launch_background</item>-->
    </style>

    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/white</item>  // unFocus 상태일때 밑줄 색.
        <item name="colorControlActivated">@color/white</item>  // Focus 상태일때 밑줄 색.
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>  // cursor 색.
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.GoodShot</item>
    </style>

    <style name="LoginCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/white</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>
</resources>