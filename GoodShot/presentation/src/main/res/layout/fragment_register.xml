<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/tv_name"
        android:text="*이름"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/til_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/register_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toTopOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="이름을 입력해주세요"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_email"
        android:text="*이메일"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_name"
        app:layout_constraintBottom_toTopOf="@id/til_email_auth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="8dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/register_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintBottom_toTopOf="@id/til_email_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_email_auth"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="name@email.com"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <android.widget.Button
        android:id="@+id/btn_email_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:layout_marginVertical="7dp"
        android:paddingVertical="7dp"
        android:background="@drawable/round_register_small_button"
        android:backgroundTint="@color/dark_green"
        android:gravity="center"
        android:text="인 증"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/notosanskr_medium"
        app:layout_constraintTop_toTopOf="@id/til_email_auth"
        app:layout_constraintBottom_toBottomOf="@id/til_email_auth"
        app:layout_constraintStart_toEndOf="@id/til_email_auth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="2.1:1"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email_verify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginVertical="8dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/register_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/til_email_auth"
        app:layout_constraintBottom_toTopOf="@id/tv_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_verify_auth"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="인증번호를 입력해주세요."
            />
    </com.google.android.material.textfield.TextInputLayout>


    <android.widget.Button
        android:id="@+id/btn_verify_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:background="@drawable/round_register_small_button"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/notosanskr_medium"
        android:minHeight="0dp"
        android:paddingVertical="7dp"
        android:text="확 인"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/til_email_verify"
        app:layout_constraintDimensionRatio="2.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/til_email_verify"
        app:layout_constraintTop_toTopOf="@id/til_email_verify"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/tv_password"
        android:text="*비밀번호"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_email_verify"
        app:layout_constraintBottom_toTopOf="@id/til_password"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/register_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:layout_constraintBottom_toTopOf="@id/til_password_repeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="비밀번호를 입력해주세요."
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_repeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/register_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:hint="비밀번호를 재확인해주세요."
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toBottomOf="@id/til_password_repeat"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        app:layout_constraintVertical_chainStyle="packed"
        >
        <!--    아이콘 크기 수정하려면 check 아이콘 vector로 넣을 때 dp 수정해야 함-->
        <android.widget.ImageButton
            android:id="@+id/btn_check_policy1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:src="@drawable/check"
            android:tint="@color/white"
            android:background="@drawable/radius_circle_button"
            android:backgroundTint="@android:color/darker_gray"
            android:padding="3dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/policy1"
            app:layout_constraintBottom_toBottomOf="@id/policy1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/policy1"
            />
        <TextView
            android:id="@+id/policy1"
            android:text="이용약관 동의"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/policy2"
            app:layout_constraintStart_toEndOf="@id/btn_check_policy1"
            app:layout_constraintEnd_toStartOf="@id/policy_1_detail"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/policy_1_detail"
            android:text="약관보기"
            android:textColor="@color/dark_green"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/policy1"
            app:layout_constraintBottom_toBottomOf="@id/policy1"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <android.widget.ImageButton
            android:id="@+id/btn_check_policy2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:src="@drawable/check"
            android:tint="@color/white"
            android:background="@drawable/radius_circle_button"
            android:backgroundTint="@android:color/darker_gray"
            android:padding="3dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/policy2"
            app:layout_constraintBottom_toBottomOf="@id/policy2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/policy2"
            />
        <TextView
            android:id="@+id/policy2"
            android:text="개인정보보호정책 동의"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@id/policy1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_check_policy2"
            app:layout_constraintEnd_toStartOf="@id/policy_1_detail"
            />
        <TextView
            android:id="@+id/policy_2_detail"
            android:text="약관보기"
            android:textSize="14sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/policy2"
            app:layout_constraintBottom_toBottomOf="@id/policy2"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <android.widget.Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round_login_button"
        android:backgroundTint="@color/dark_green"
        android:layout_marginBottom="48dp"
        app:layout_constraintDimensionRatio="H,1:6.36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>