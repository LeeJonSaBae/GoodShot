<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_change_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_nickname"
        android:layout_marginBottom="17dp"
        app:layout_constraintVertical_chainStyle="packed"
        >
        <TextView
            android:id="@+id/tv_change_password_title"
            android:text="비밀번호 재설정"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_password_description1"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/tv_password_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입한 이메일 주소를 입력해주세요"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginBottom="10sp"
            app:layout_constraintTop_toBottomOf="@id/tv_change_password_title"
            app:layout_constraintBottom_toTopOf="@id/tv_password_description2"
            />
        <TextView
            android:id="@+id/tv_password_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 재설정을 위한 이메일을 보내드리겠습니다"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_password_description1"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_nickname"
        android:text="*이름"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_change_password_title"
        app:layout_constraintBottom_toTopOf="@id/til_name"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/find_password_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        app:layout_constraintBottom_toTopOf="@id/tv_email"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="성함을 입력해주세요"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_email"
        android:text="*이메일"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_name"
        app:layout_constraintBottom_toTopOf="@id/til_email"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@drawable/find_password_text_input_layout_selector"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintBottom_toTopOf="@id/tv_input_type_notice"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="name@email.com"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_input_type_notice"
        android:text="대소문자를 구분해서 입력해주세요"
        android:textSize="10sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/pretendard_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_email"
        app:layout_constraintBottom_toTopOf="@id/btn_send_password"
        />


    <android.widget.Button
        android:id="@+id/btn_send_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round_login_button"
        android:backgroundTint="@color/dark_green"
        android:layout_marginBottom="48dp"
        app:layout_constraintDimensionRatio="H,1:6.36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>