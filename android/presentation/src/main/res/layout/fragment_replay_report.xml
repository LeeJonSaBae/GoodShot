<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 자세 다시 확인하기 타이틀 -->
        <TextView
            android:id="@+id/tv_replay_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="자세 다시 확인하기"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#1C277A63"
            app:layout_constraintBottom_toBottomOf="@id/tv_replay_video_title"
            app:layout_constraintEnd_toEndOf="@id/tv_replay_video_title"
            app:layout_constraintStart_toStartOf="@id/tv_replay_video_title"
            app:layout_constraintTop_toTopOf="@id/tv_replay_video_title" />

        <!-- 다시보기 영상 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_replay_video"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_replay_video_title"
            tools:cardBackgroundColor="@color/address_color">

            <!-- TODO : ExpoPlayer 이용해서 영상  -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/pv_replay_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>