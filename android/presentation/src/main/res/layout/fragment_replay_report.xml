<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarFadeDuration="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. 자세 다시 확인하기 타이틀 -->
        <TextView
            android:id="@+id/tv_replay_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/replay_report_title_margin_horizontal"
            android:layout_marginTop="20dp"
            android:text="자세 다시 확인하기"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 타이틀 하이라이트 효과 -->
        <View
            android:id="@+id/view_highlight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#1C277A63"
            app:layout_constraintBottom_toBottomOf="@id/tv_replay_video_title"
            app:layout_constraintEnd_toEndOf="@id/tv_replay_video_title"
            app:layout_constraintStart_toStartOf="@id/tv_replay_video_title"
            app:layout_constraintTop_toTopOf="@id/tv_replay_video_title" />

        <!-- 다시보기 영상 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_replay_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@id/tv_swing_flow_title"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_replay_video_title">

            <androidx.media3.ui.PlayerView
                android:id="@+id/pv_replay_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- 2. 스윙 흐름 타이틀 -->
        <TextView
            android:id="@+id/tv_swing_flow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/replay_report_title_margin_horizontal"
            android:layout_marginTop="30dp"
            android:text="스윙 흐름"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_replay_video" />
        <!-- 타이틀 하이라이트 효과 -->
        <View
            android:id="@+id/view_highlight2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#1C277A63"
            app:layout_constraintBottom_toBottomOf="@id/tv_swing_flow_title"
            app:layout_constraintEnd_toEndOf="@id/tv_swing_flow_title"
            app:layout_constraintStart_toStartOf="@id/tv_swing_flow_title"
            app:layout_constraintTop_toTopOf="@id/tv_swing_flow_title" />

        <!-- 스윙 흐름 ViewPager -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_swing_flow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_swing_flow_title" />

        <!-- 3. 스윙 분석 타이틀 -->
        <TextView
            android:id="@+id/tv_swing_flow_analysis_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/replay_report_title_margin_horizontal"
            android:layout_marginTop="30dp"
            android:text="스윙 분석"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vp_swing_flow" />
        <!-- 타이틀 하이라이트 효과 -->
        <View
            android:id="@+id/view_highlight3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="#1C277A63"
            app:layout_constraintBottom_toBottomOf="@id/tv_swing_flow_analysis_title"
            app:layout_constraintEnd_toEndOf="@id/tv_swing_flow_analysis_title"
            app:layout_constraintStart_toStartOf="@id/tv_swing_flow_analysis_title"
            app:layout_constraintTop_toTopOf="@id/tv_swing_flow_analysis_title" />

        <!-- 스윙 분석 상세 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_swing_flow_analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="@dimen/replay_report_title_margin_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_swing_flow_analysis_title"
            app:layout_constraintTop_toBottomOf="@id/tv_swing_flow_analysis_title">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>