                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/iv_recent_tempo_icon"
                            app:layout_constraintStart_toEndOf="@id/iv_recent_tempo_icon"
                            app:layout_constraintTop_toTopOf="@id/iv_recent_tempo_icon" />

                        <TextView
