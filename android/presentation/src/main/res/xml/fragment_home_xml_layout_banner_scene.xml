<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@id/iv_logo"
            motion:layout_constraintStart_toEndOf="@id/iv_logo"
            motion:layout_constraintTop_toTopOf="@id/iv_logo" />
        <Constraint
            android:id="@+id/iv_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <!-- 인사말 + 전문가상담 버튼 안보이게 -->
        <Constraint
            android:id="@+id/tv_banner_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/btn_consult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/tv_banner_title_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <!-- 앱이름 보이게 -->
        <Constraint
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>
</MotionScene>